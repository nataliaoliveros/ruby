<!DOCTYPE html>
<html>
  <head>
    <title>Ruby</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
  		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  			<ul class="navbar-nav">
  				<li class="nav-item">
  				  <%= link_to "Inicio", bienvenido_index_path, class: "nav-link" %>  					
  					</li>

  				<li class="nav-item">
				    <%= link_to "Tareas", tareas_path, class: "nav-link" %>					
				  </li>

				  <li class="nav-item">
				    <%= link_to "Crear tarea", new_tarea_path, class: "nav-link" %>
			 		</li>	

         <% if usuario_signed_in? %>
           
          <li class="nav-item">
            <%= link_to "Cerrar Sesion", destroy_usuario_session_path, method: "delete", class: "nav-link" %>            
          </li>

         <% else %>
         <li class="nav-item"><%=link_to "Iniciar Sesion", new_usuario_session_path, class: "nav-link" %>           
         </li> 

         <li class="nav-item"><%= link_to "Crear cuenta", new_usuario_registration_path, class: "nav-link" %>          
         </li>
         <% end %>

			 </ul>
  		</nav>
      <p><%= alert %></p>
      <p><%= notice %></p>

  	
    <%= yield %>
    </div>
  </body>
</html>
